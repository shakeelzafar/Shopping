@{
    
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@using MVC.Models;
<div>
    <form action="~/Admin/SearchP" class="form-horizontal" role="form" method="post">


        <div class="form-group">

            <div class="col-lg-5 pull-left">
                <input type="text" class="form-control" name="name" placeholder="Search" />
            </div>
            <div class="col-lg- pull-left">
                <input type="submit" value="Go" class="btn btn-default" />
            </div>
        </div>

    </form>
</div>
<h1>      </h1>
<h2>Categories</h2>

@{
    MyEntities my = new MyEntities();
    IEnumerable<Categories> myList = my.Categories.ToList();
}

<div class="">

    <table border="1" style="margin-top:10%; width:80%; line-height:22PX;">

        <tr><th><h5>ID</h5></th><th><h5>Name</h5></th><th><h5>Delete</h5></th><th><h5>Update</h5></th><th><h5>Details</h5></th></tr>

        @foreach (Categories c in myList)
        {
            <tr>
                <td><h5>@c.Id</h5></td>
                <td><h6>@c.Name</h6></td> 
                <td>
                    <a style="font-size:16px; color:red" href="~/Admin/Cat_Details/@c.Id">View Details</a>
                </td>
                <td>
                    <a style="font-size:16px; color:red" href="~/Admin/Cat_Delete/@c.Id">Delete</a>
                </td>
                <td>
                    <a style="font-size:16px; color:green" href="~/Admin/Cat_Update/@c.Id">Update</a>
                </td>
            </tr>
        }


    </table>

</div>
