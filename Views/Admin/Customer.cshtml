@{
    ViewBag.Title = "viewProduct";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@using MVC.Models;
<div>
    <form action="~/Admin/Search" class="form-horizontal" role="form" method="get">


        <div class="form-group">

            <div class="col-lg-5 pull-left">
                <input type="text" class="form-control" name="name" placeholder="Search" />
            </div>
            <div class="col-lg- pull-left">
                <input type="submit" value="Go" class="btn btn-default" />
            </div>
        </div>

    </form>
</div>
<h1>      </h1>
<h2>All Customers</h2>

@{
    MyEntities my = new MyEntities();
    IEnumerable<Customer> myList = my.Customer.Where(x => x.Type != "Admin").Select(x => x);
}

<div  >
    <table border="1" style="margin-left:10%; margin-top:10%; width:80%; line-height:22PX;">

        <tr><th><h5>ID</h5></th><th><h5>Name</h5></th><th><h5>Email</h5></th><th><h5>Address</h5></th><th><h5>Country</h5></th><th><h5>Year</h5></th><th><h5>Note</h5></th><th><h5>DELETE</h5></th><th><h5>UPDATE</h5></th></tr>

        @foreach (Customer c in myList)
        {
            <tr>
                <td><h5>@c.Id</h5></td>
                <td><h6>@c.Name</h6></td>
                <td><h6>@c.Email</h6></td>
                <td><h6>@c.Address</h6></td>
                <td><h6>@c.Country</h6></td>
                <td><h6>@c.Year</h6></td>
                <td><h6>@c.Note</h6></td>
                <td>
                    <a style="font-size:16px; color:red" href="~/Admin/delete/@c.Id">Delete</a>
                </td>
                <td>
                    <a style="font-size:16px; color:green" href="~/Admin/update/@c.Id">Update</a>
                </td>
            </tr>
        }


    </table>

</div>
