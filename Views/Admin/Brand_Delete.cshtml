@using MVC.Models
@model  MVC.Models.Brand
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <title></title>

    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
</head>
<body>

    <div>
        <form action="~/Admin/dBrand" class="form-horizontal" role="form" method="post">

            @Html.HiddenFor(m => Model.Id)
            <div class="form-group">
                <label class="control-label col-lg-3" for="name">Name: </label>
                <label class="control-label col-lg-4" for="name">@Model.Name </label>

            </div>
            <div>

                <table border="1" style="margin-top:15%; width:80%; line-height:22PX;">

                    <tr><th><h5>ID</h5></th><th><h5>Name</h5></th></tr>

                    @foreach (Brand c in Model.Brand)
                    {
                        <tr>
                            <td><h5>@c.Id</h5></td>
                            <td><h6>@c.Name</h6></td>
                        </tr>
                    }


                </table>
                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-7">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        </form>
    </div>






</body>
</html>