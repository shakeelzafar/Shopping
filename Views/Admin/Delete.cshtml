@using MVC.Models
@model  MVC.Models.Customer
@{
    ViewBag.Title = "update";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <title></title>

    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
</head>
<body>

    <div>
        <form action="~/Admin/DeleteCustomer/@Model.Id" class="form-horizontal" role="form" method="post">

            
            <div class="form-group">
                <label class="control-label col-lg-3" for="name">Name: </label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" name="name" placeholder=@Model.Name />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-lg-3" for="email">Email:</label>
                <div class="col-lg-4">
                    <input type="email" class="form-control"  name="email" placeholder=@Model.Email />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-lg-3" for="pwd">Password:</label>
                <div class="col-lg-4">
                    <input type="password" class="form-control"name="password" placeholder=@Model.Password />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-lg-3" for="address">Address:</label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" name="address" placeholder=@Model.Address />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-lg-3" for="country">Country: </label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" name="country" placeholder=@Model.Country />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-lg-3" for="Gender">Gender: </label>
                <div class="col-lg-4">
                    <input type="text" class="form-control"name="gender" placeholder=@Model.Gender />
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">Year: </label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" name="year" placeholder=@Model.Year />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-lg-3" for="note">Note:</label>
                <div class="col-lg-4">
                    <textarea class="form-control"    name="note" placeholder=@Model.Note></textarea>
                </div>
            </div>



            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>

        </form>
    </div>



</body>
</html>