@using MVC.Models
@model  MVC.Models.Product
@{
    ViewBag.Title = "update";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <title></title>

    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
</head>
<body>

    <div>
        <form action="~/Admin/uPro" class="form-horizontal" role="form" method="post">

            @Html.HiddenFor(m => Model.Id)
            <div class="form-group">
                <label class="control-label col-lg-3" for="name">Name: </label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" data-val-required="Field is required" required name="name" placeholder=@Model.Name />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-lg-3" for="price">Description:</label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" data-val-required="Field is required" required name="description" placeholder=@Model.Description />
                </div>
            </div>
            <div class="form-group">
                <label class=" control-label col-lg-3" for="brand">Size</label>
                <div class="col-lg-4">
                    <select name="size">
                        <option>White</option>
                        <option>Blue</option>
                        <option>Black</option>
                        <option>Yellow</option>
                    </select>
                </div>
                <ul></ul>

            </div>
            <div class="form-group">
                <label class="control-label col-lg-3" for="price">Price:</label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" data-val-required="Field is required" required name="price" placeholder=@Model.Price />
                </div>
            </div>

            <div class="form-group">
                <label class=" control-label col-lg-3" for="brand">Size</label>
                <div class="col-lg-4">
                    <select name="size">                        
                        <option>Small</option>
                        <option>Medium</option>
                        <option>Large</option>
                    </select>
                </div>
                <ul></ul>

            </div>

            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <input type="submit" value="Update" class="btn btn-success" />
                </div>
            </div>

        </form>
    </div>



</body>
</html>