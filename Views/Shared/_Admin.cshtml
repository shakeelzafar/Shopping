    <link href="~/plugins/xcharts/xcharts.min.css" rel="stylesheet">
    <link href="~/plugins/select2/select2.css" rel="stylesheet">
    <link href="~/plugins/justified-gallery/justifiedGallery.css" rel="stylesheet">
    <link href="~/css/style_v2.css" rel="stylesheet">
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <link href="~/plugins/chartist/chartist.min.css" rel="stylesheet">
       
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
            <script src="http://getbootstrap.com/docs-assets/js/html5shiv.js"></script>
            <script src="http://getbootstrap.com/docs-assets/js/respond.min.js"></script>
    <![endif]-->
</head>
<body style="background :url('../../images/b.jpg') center">
    <!--Start Header-->
    <div class="row" style=" width:100%; margin-top:10%">
        <div class="col-lg-3"    >
            <aside class=" main-sidebar">
                <!-- sidebar: style can be found in sidebar.less -->
                <section class=" sidebar" style="border:double; background-color:burlywood">
                    <ul style=" margin-top: 10%;">
                        <li class="treeview">
                            <a href="~/Admin/Customer">
                                <i class="fa fa-circle"></i>
                                <span style="font-size:24px">Customer</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu" style=" ">
                                <li style="font-size: 16px; margin-bottom: 4%"><a href="~/Admin/Add"><i class="fa fa-circle"></i> Add</a></li>
                                <li style="font-size:16px"><a href="~/Admin/Display_All"><i class="fa fa-circle"></i> View_All</a></li>

                            </ul>
                        </li>
                    </ul>
                    <ul style="">
                        <li class="treeview">
                            <a href="~/Admin/Categories">
                                <i class="fa fa-circle"></i>
                                <span style="font-size:24px">Categories</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            @{
                                MyEntities ctx = new MyEntities();
                                IEnumerable<Categories> list = ctx.Categories.ToList();

                            }
                            <ul class="treeview-menu">
                                <li style="font-size: 18px; margin-bottom: 4%; color:red" class="btn btn-default"><a href="~/Admin/Cat_Add"><i class="fa fa-circle "></i> Add_Cat</a></li><br/>
                                <li style="font-size:18px" class="btn btn-default"><a href="~/Admin/Categories"><i class="fa fa-circle "></i> View_All</a></li>
                                @foreach (var v in list)
                                {
                                    <li style="font-size:16px"><a href="~/Admin/Cat_Details/@v.Id"><i class="fa fa-circle"></i> @v.Name</a></li>
                                }


                            </ul>

                        </li>
                    </ul>
                    <ul style=" ">
                        <li class="treeview">
                            <a href="~/Admin/Sub_Categories">
                                <i class="fa fa-circle"></i>
                                <span style="font-size:24px">Sub_Categories</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            @{

                                IEnumerable<Sub_Categories> klist = ctx.Sub_Categories.ToList();

                            }
                            <ul class="treeview-menu" style=" ">
                                <li style="font-size: 16px;   " class="btn btn-success"><a href="~/Admin/Sub_Cat_Add"><i class="fa fa-circle "></i> Add_Sub_Cat</a></li><br/>
                                <li style="font-size:16px" class=" btn btn-success"><a href="~/Admin/Sub_Categories"><i class="fa fa-circle"></i> View_All</a></li>
                                @foreach (var v in klist)
                                {
                                    <li style="font-size:16px"><a href="~/Admin/Sub_Cat_Details/@v.Id"><i class="fa fa-circle"></i> @v.Name</a></li>
                                }

                            </ul>

                        </li>
                    </ul>
                    <ul style=" ">
                        <li class="treeview">
                            <a href="~/Admin/Brand">
                                <i class="fa fa-circle"></i>
                                <span style="font-size:24px">Brands</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            @{

                                IEnumerable<Brand> blist = ctx.Brand.ToList();

                            }

                            <ul class="treeview-menu" style=" ">
                                <li style="font-size: 16px; padding-bottom: 4%; margin-bottom: 4%;" class="btn btn-info"><a href="~/Admin/BAdd"><i class="fa fa-circle"></i> Add_Brand</a></li><br/>
                                <li style="font-size:16px" class=" btn btn-info"><a href="~/Admin/Brand"><i class="fa fa-circle"></i> View_All</a></li>
                                @foreach (var v in blist)
                                {
                                    <li style="font-size:16px"><a href="~/Admin/B_Details/@v.Id"><i class="fa fa-circle"></i> @v.Name</a></li>
                                }

                            </ul>

                        </li>
                    </ul>
                    <ul style=" ">
                        <li class="treeview">
                            <a href="~/Admin/Product">
                                <i class="fa fa-circle"></i>
                                <span style="font-size:24px">Products</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>

                            <ul class="treeview-menu" style=" ">
                                <li style="font-size:16px; padding-bottom:4%; margin-bottom:4%" class="btn btn-info"><a href="~/Admin/Add_Before_Pro"><i class="fa fa-pie-circle "></i> Add_Product</a></li><br/>
                                <li style="font-size: 16px; padding-top: 4%" class="btn btn-info"><a href="~/Admin/Product"><i class="fa fa-pie-circle "></i> View_All</a></li>
                            </ul>

                        </li>
                    </ul>
                    <ul>
                        <li><a class="btn btn-danger" style="margin: 20px; color: blue" href="~/User/LogOut">LogOut</a></li>

                    </ul>
                </section>
        <!-- /.sidebar -->
        </aside>
    </div>


     
            <!--Start Content-->
            <!--End Content-->
        <div class=" col-lg-9" >
            @RenderBody()

            @Scripts.Render("~/bundles/jquery")
            @RenderSection("scripts", required: false)
        </div>
            <script src="../plugins/jQuery/jQuery-2.1.4.min.js"></script>
            <!-- Bootstrap 3.3.2 JS -->
            <script src="../bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
            <!-- Slimscroll -->
            <script src="../plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
            <!-- FastClick -->
            <script src='../plugins/fastclick/fastclick.min.js'></script>
            <!-- AdminLTE App -->
            <script src="../dist/js/app.min.js" type="text/javascript"></script>
            <!-- AdminLTE for demo purposes -->
            <script src="../dist/js/demo.js" type="text/javascript"></script>
        
           

        
    </div>
</body>
</html>
